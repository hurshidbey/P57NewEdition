# Protokol 57 Environment Variables Template
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV=production
PORT=5000
HOST=0.0.0.0

# Supabase Configuration (REQUIRED for frontend)
VITE_SUPABASE_URL=your_supabase_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Supabase Backend Configuration
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_key

# Database Configuration
DATABASE_URL=postgresql://user:password@host:port/database
SUPABASE_DB_PASSWORD=your_db_password

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key

# Payme Configuration
PAYME_MERCHANT_ID=your_merchant_id
PAYME_KEY=your_production_key
PAYME_TEST_KEY=your_test_key

# Session Configuration
SESSION_SECRET=your_random_session_secret

# IMPORTANT: Frontend variables MUST start with VITE_ to be included in the build